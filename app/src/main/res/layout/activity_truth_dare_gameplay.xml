<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:rowCount="8"
    android:columnCount="8"
    android:background="@drawable/background">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </com.google.android.gms.ads.AdView>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:text="You will..."
        android:textColor="@android:color/holo_red_dark"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_below="@+id/adView"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:gravity="center"
        android:text="Roll your fate"
        android:id="@+id/phrase"
        android:background="@drawable/rounded_text_view"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:layout_alignParentTop="false"
        android:textAppearance="@android:color/white" />

    <Button
        android:id="@+id/chooseTruthorDare"
        android:text="Choose My Destiny !"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:onClick="getFate"
        android:layout_below="@+id/phrase"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
