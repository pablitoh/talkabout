<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shape"
    android:layout_margin="20dp"
    >

    <com.concon.talkabout.talkabout.elements.TextViewFun
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/dialogTitle"
        android:textSize="@dimen/menu_text_size"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:text="@string/addRulePopUpTitle"
        />

    <com.concon.talkabout.talkabout.elements.TextViewFun
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialogText"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center|start"
        android:padding="30dp"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/gameplay_button_text"
        android:text="@string/addRuleIndication"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ruleInput"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <com.concon.talkabout.talkabout.elements.ButtonFun
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cancelRule"
            android:background="@drawable/button_start_shape"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Cancel"
            android:textSize="@dimen/gameplay_button_text"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="1"
            />

        <com.concon.talkabout.talkabout.elements.ButtonFun
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addRule"
            android:background="@drawable/button_start_shape"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/addRule"
            android:textSize="@dimen/gameplay_button_text"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>
