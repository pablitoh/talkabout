<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/historyPage"
    android:background="@drawable/background"
    >
    <com.concon.talkabout.talkabout.elements.TitleFun
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/rulesTitle"
        android:id="@+id/textView"
        android:textSize="45sp"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/adView"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:paddingTop="10dp"/>
    <com.concon.talkabout.talkabout.elements.TextViewFun
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/myRulesText"
        android:textColor="@color/white"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view2"
        android:gravity="center"
        android:padding="10dp"
        />

<com.concon.talkabout.talkabout.elements.ButtonFun
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_shape"
    android:text="@string/addRule"
    android:textColor="@color/black"
    android:onClick="addRule"
    android:id="@+id/view"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@android:id/list"
        android:layout_below="@+id/view2"
        android:layout_above="@+id/view" />

    <com.concon.talkabout.talkabout.elements.TextViewFun
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nothingToShow"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/section_title_text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>