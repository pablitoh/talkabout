<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.concon.talkabout.talkabout.IneverMainMenu">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </com.google.android.gms.ads.AdView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:id="@+id/mainTitle"
        android:text="@string/title"
        android:gravity="center"
        android:textSize="60sp"
        android:textColor="@color/bright_foreground_material_dark"
        android:layout_below="@+id/adView"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">

        <Button

            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/basicDifficulty"
            android:text="Please Go Easy..."
            android:layout_above="@+id/mediumDifficulty"
            android:background="@drawable/buttonshape"
            android:onClick="startActivity"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:id="@+id/mediumDifficulty"
            android:text="I'm kinda ready"
            android:layout_above="@+id/hardDifficulty"
            android:layout_alignLeft="@+id/hardDifficulty"
            android:layout_alignStart="@+id/hardDifficulty"
            android:background="@drawable/buttonshape"
            android:onClick="startActivity"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:id="@+id/hardDifficulty"
            android:text="Bring it, Baby !"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/basicDifficulty"
            android:layout_alignStart="@+id/basicDifficulty"
            android:background="@drawable/buttonshape"
            android:onClick="startActivity"/>
        </LinearLayout>


</RelativeLayout>
