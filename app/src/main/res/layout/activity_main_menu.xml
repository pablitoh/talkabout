<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id"
            >
        </com.google.android.gms.ads.AdView>
    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:splitMotionEvents="false"
        android:windowEnableSplitTouch="false">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/AppTitle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="90sp"
            android:textIsSelectable="false"
            android:background="@drawable/logo"
            android:textStyle="bold" />

        </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:splitMotionEvents="false"
        android:windowEnableSplitTouch="false"
       >

        <com.decote.partygames.elements.MenuButtonFun
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/INevertitle"
            android:onClick="startGame"
            android:background="@drawable/button_shape"
            android:textColor="@color/orange"
            android:id="@+id/iNeverButton"
            android:textSize="@dimen/menu_text_size"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:padding="3dp"

            />

        <com.decote.partygames.elements.MenuButtonFun
            android:background="@drawable/button_shape"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/truthDareTitle"
            android:onClick="startGame"
            android:textColor="@color/orange"
            android:id="@+id/truthDareButton"
            android:textSize="@dimen/menu_text_size"
            android:layout_margin="5dp"
            android:textStyle="bold"
            style="?android:borderlessButtonStyle"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:splitMotionEvents="false"
        android:windowEnableSplitTouch="false">

        <com.decote.partygames.elements.MenuButtonFun

            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/charadesTitle"
            android:onClick="startGame"
            android:background="@drawable/button_shape"
            android:textColor="@color/orange"
            android:id="@+id/mimicButton"
            android:textSize="@dimen/menu_text_size"
            android:layout_margin="5dp"
            android:textStyle="bold"
            style="?android:borderlessButtonStyle"/>

        <com.decote.partygames.elements.MenuButtonFun
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/mkfTitle"
            android:onClick="startGame"
            android:textColor="@color/orange"
            android:background="@drawable/button_shape"
            android:id="@+id/marryButton"
            android:textSize="@dimen/menu_text_size"
            android:layout_margin="5dp"
            android:textStyle="bold"
            style="?android:borderlessButtonStyle" />
    </LinearLayout>
</LinearLayout>
