<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/adsLayout">
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id"
            >
        </com.google.android.gms.ads.AdView>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/adsLayout"
        android:id="@+id/logoLayout"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/AppTitle"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="90sp"
            android:textIsSelectable="false"
            android:src="@drawable/logo_nuevo"
            android:textStyle="bold"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:contentDescription="Logo"/>
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_below="@id/logoLayout"
        android:layout_above="@+id/bottomMenu"
        android:gravity="center">

        <com.concon.talkabout.talkabout.elements.ButtonFun
            android:background="@drawable/button_shape"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/playButton"
            android:onClick="startGame"
            android:textColor="@color/black"
            android:id="@+id/truthDareButton"
            android:textSize="@dimen/gameplay_text"
            android:textStyle="bold"
            android:padding="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawablePadding="5dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:id="@+id/bottomMenu"

        >


        <com.concon.talkabout.talkabout.elements.TextViewFun
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/selectGame"
            android:gravity="center"
            android:textColor="@color/orange"
            android:textSize="@dimen/gameplay_button_text"
            android:layout_above="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/view" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearLayout3"
            android:background="@drawable/carrousel">
            <com.concon.talkabout.talkabout.elements.TextViewFun
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableStart="@drawable/arrow_left_small"
                android:drawableLeft="@drawable/arrow_left_small"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="0"
                android:id="@+id/prevButton"
                android:clickable="true"
                />
            <com.concon.talkabout.talkabout.elements.CustomHorizontalScroll
                android:id="@+id/carrousel"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="5dp"
                android:fillViewport="true"
                android:layout_weight="1"
                android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:layout_margin="0dp">

                    <com.concon.talkabout.talkabout.elements.ButtonFun
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/INevertitle"
                        android:onClick="startGame"
                        android:background="@drawable/button_shape"
                        android:textColor="@color/black"
                        android:id="@+id/iNeverButton"
                        android:textSize="@dimen/indication_text"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        />

                    <com.concon.talkabout.talkabout.elements.ButtonFun
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/charadesTitle"
                        android:onClick="startGame"
                        android:background="@drawable/button_shape"
                        android:textColor="@color/black"
                        android:id="@+id/mimicButton"
                        android:textSize="@dimen/indication_text"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        />

                    <com.concon.talkabout.talkabout.elements.ButtonFun
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/mkfTitle"
                        android:onClick="startGame"
                        android:textColor="@color/black"
                        android:background="@drawable/button_shape"
                        android:id="@+id/marryButton"
                        android:textSize="@dimen/indication_text"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        />
                </LinearLayout>
            </com.concon.talkabout.talkabout.elements.CustomHorizontalScroll>
            <com.concon.talkabout.talkabout.elements.TextViewFun
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableStart="@drawable/arrow_right_small"
                android:drawableLeft="@drawable/arrow_right_small"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:gravity="center"
                android:id="@+id/nextButton"
                android:clickable="true"
                />
            </LinearLayout>

    </LinearLayout>

    </RelativeLayout>