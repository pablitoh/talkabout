<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0dp">


    <com.concon.talkabout.talkabout.elements.TitleFun
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/wheelTitle"
        android:id="@+id/textView"
        android:textSize="@dimen/section_title_text"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/adView"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:paddingTop="20dp"/>

       <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:id="@+id/frameContainer"
           android:visibility="visible"
           android:layout_below="@+id/textView">
           <ImageView
               android:src="@drawable/wheel_of_fortune"
               android:id="@+id/imageView_ring"
               android:scaleType="matrix"
               android:layout_width="fill_parent"
               android:layout_height="fill_parent"
               android:adjustViewBounds="true">
           </ImageView>
           <ImageView
               android:src="@drawable/spin_button_shape"
               android:id="@+id/logo_icono"
               android:scaleType="matrix"
               android:layout_width="165dp"
               android:layout_height="165dp"
               android:adjustViewBounds="true"
               android:layout_gravity="center"
               android:clickable="true">
           </ImageView>
       </FrameLayout>
</RelativeLayout>
