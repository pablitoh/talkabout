<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </com.google.android.gms.ads.AdView>

    <com.concon.talkabout.talkabout.elements.TitleFun
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Spin and Drink"
        android:id="@+id/textView"
        android:textSize="@dimen/section_title_text"
        android:textColor="@color/orange"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/adView"
        android:layout_alignParentStart="true"
        android:gravity="center"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:layout_below="@+id/textView"
       android:padding="0dp">

       <ImageView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:id="@+id/imageView_arrow"
           android:src="@drawable/arrow_down_small"
           android:padding="0dp"
           android:
            />

       <ImageView
           android:src="@drawable/wheel_of_fortune"
           android:id="@+id/imageView_ring"
           android:scaleType="matrix"
           android:layout_width="wrap_content"
           android:layout_height="fill_parent"
           android:adjustViewBounds="true"
           android:layout_weight="1"
           android:padding="0dp"
           >
       </ImageView>
   </LinearLayout>
</RelativeLayout>
